<?xml version="1.0" encoding="utf-8"?>
<!-- 
说明： 1。最后一个 item <item android:color="@android:color/black"/>  为没选择的颜色值
    2.其他为选择或处在当前位置的颜色值
-->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:color="@color/blue"/>
    <item android:state_window_focused="false" android:color="@color/blue"/>
    <item android:state_pressed="true" android:color="@color/blue"/>
    <item android:state_selected="true" android:color="@color/blue"/>
    <!--item android:state_activated="true" android:color="@color/vpi__bright_foreground_holo_dark"/-->
    <item android:color="@color/orange"/> <!-- not selected -->
</selector>
